# ==============================================
# LOCAL / DOCKER DEVELOPMENT SETTINGS
# Use these settings when running comfortably on localhost or local network (IPs)
# ==============================================
DEBUG=False
SECRET_KEY=dev-secret-key-change-this-in-prod

# Database
DB_HOST=host.docker.internal
DB_NAME=illustration_db
DB_USER=root
DB_PASSWORD=root
DB_PORT=3306

# Superuser Credentials (auto-created on startup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
# For local network access, set this to your IP:
# FRONTEND_URL=http://192.168.0.105:3000

# Security - Relaxed for Local Docker
SECURE_SSL_REDIRECT=False 
CORS_ALLOW_ALL_ORIGINS=True
allow_all_local_networks=True

# Add your specific local IPs here if needed (comma separated)
CSRF_TRUSTED_ORIGINS_EXTRA=http://192.168.0.105,http://192.168.0.92
CORS_ALLOWED_ORIGINS_EXTRA=http://192.168.0.105,http://192.168.0.92

# PRODUCTION SETTINGS (Uncomment to use)
# ==============================================
# DEBUG=False
# SECRET_KEY=your-super-strong-production-key
# SECURE_SSL_REDIRECT=False
# CORS_ALLOW_ALL_ORIGINS=False
# allow_all_local_networks=False
# ALLOWED_HOSTS=api.your-domain.com,your-domain.com
# CSRF_TRUSTED_ORIGINS=https://api.your-domain.com,https://your-domain.com
# FRONTEND_URL=https://your-domain.com
