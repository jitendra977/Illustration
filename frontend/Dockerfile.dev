cd /opt/Illustration

cat > frontend/Dockerfile.dev << 'EOF'
FROM node:20-bullseye

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Run dev server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
EOF